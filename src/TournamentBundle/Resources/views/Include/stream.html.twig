{% if streams is defined and streams|length > 0 %}
    {% if streams|length > 1 %}
        <ul class="nav nav-tabs" role="tablist">
            {% for stream in streams %}
                <li role="presentation" class="{{ loop.first ? 'active' }}">
                    <a href="#{{ stream.channel }}" aria-controls="{{ stream.channel }}" role="tab" data-toggle="tab">
                        {{ stream.channel }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}

    {% if streams|length > 1 %}<div class="tab-content">{% endif %}
    {% for stream in streams %}
        {% if streams|length > 1 %}<div role="tabpanel" class="tab-pane {{ loop.first ? 'active' }}" id="{{ stream.channel }}">{% endif %}
            <div class="container-fluid margin-bottom-50">
                <div class="row player-section">
                    <div class="col-md-8 no-padding">
                        <div class="embed-responsive embed-responsive-16by9">
                            <iframe class="player" src="https://player.twitch.tv/?channel={{ stream.channel }}{{ loop.first ? '&autoplay=true' }}" allowfullscreen></iframe>
                        </div>
                    </div>
                    <div class="chat-wrapper">
                        <iframe class="chat" src="https://www.twitch.tv/{{ stream.channel }}/chat?popout="></iframe>
                    </div>
                </div>
            </div>
        {% if streams|length > 1 %}</div>{% endif %}
    {% endfor %}
    {% if streams|length > 1 %}</div>{% endif %}

    <style>
        .no-padding{
            padding:0;
        }
        iframe{
            border:none;
        }
        .player-section{
            position:relative;
        }
        .chat-wrapper{
            position:absolute;
            left:70%;top:0;right:0;bottom:0;
        }
        .chat-wrapper iframe{
            width:100%;
            height:100%;
        }
        @media screen and (max-width:767px){
            .chat-wrapper{position:relative;height:300px;left:0;}
        }
    </style>
{% endif %}

