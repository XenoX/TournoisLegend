<div class="modal fade" id="streamRequest" tabindex="-1" role="dialog" aria-labelledby="streamRequest">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span>&times;</span>
                </button>
                <h4 class="modal-title" id="streamRequest">
                    {{ 'tournament.profile.stream.modal.title'|trans }}
                </h4>
            </div>
            {{ form_start(form) }}
            <div class="modal-body">
                <p>{{ 'tournament.profile.stream.modal.body'|trans }}</p>
                <p class="text-info margin-bottom-20">{{ 'tournament.profile.stream.modal.info'|trans }}</p>
                {{ form_rest(form) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    {{ 'close'|trans }}
                </button>
                <button type="submit" class="btn btn-primary">
                    {{ 'send'|trans }}
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>