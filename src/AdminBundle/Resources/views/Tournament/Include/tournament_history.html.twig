<div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title">History</h3>
    </div>
    <div class="box-body">
        <div class="row margin-bottom-20">
            <div class="container-fluid">
                {% if histories %}
                    <table id="history_list" class="table table-condensed dataTable">
                        <thead>
                        <tr>
                            <th>Action</th>
                            <th>Date</th>
                            <th>User</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for history in histories %}
                            <tr>
                                <td>{{ history.content|raw }}</td>
                                <td>{{ history.createdAt|localizeddate('short', 'medium', null, history.createdAt|date('e')) }}</td>
                                <td>
                                    <a href="{{ path('admin_user_update', {'user': history.user.id}) }}" target="_blank">
                                        {{ history.user.name }}
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <p class="text-primary text-center">No history for this tournament yet.</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function() {
        $('#history_list').dataTable({
            "bPaginate":false,
            "bLengthChange":false,
            "bFilter": true,
            "bSort": false,
            "bInfo":false
        });
    });
</script>