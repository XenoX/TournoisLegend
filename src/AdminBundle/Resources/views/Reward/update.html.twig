{% extends 'AdminBundle::base.html.twig' %}

{% block body %}
    <div class="col-sm-6 col-sm-offset-3">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">
                    {% if reward.name %}
                        Update {{ reward.name }}
                    {% else %}
                        Create reward
                    {% endif %}
                </h3>
            </div>
            <div class="box-body">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-12">{{ form_row(form.name) }}</div>
                </div>
                <div class="row">
                    <div class="col-md-6">{{ form_row(form.firstFr) }}</div>
                    <div class="col-md-6">{{ form_row(form.firstEn) }}</div>
                </div>
                <div class="row">
                    <div class="col-md-6">{{ form_row(form.secondFr) }}</div>
                    <div class="col-md-6">{{ form_row(form.secondEn) }}</div>
                </div>
                <div class="row">
                    <div class="col-md-6">{{ form_row(form.thirdFr) }}</div>
                    <div class="col-md-6">{{ form_row(form.thirdEn) }}</div>
                </div>
                <div class="row">
                    <div class="col-md-6">{{ form_row(form.fourthFr) }}</div>
                    <div class="col-md-6">{{ form_row(form.fourthEn) }}</div>
                </div>
                <div class="row">
                    <div class="col-md-6">{{ form_row(form.fifthToEighthFr) }}</div>
                    <div class="col-md-6">{{ form_row(form.fifthToEighthEn) }}</div>
                </div>
                <div class="container-fluid">
                    {{ form_row(form.activated) }}
                    {{ form_row(form.lan) }}
                </div>
                {{ form_rest(form) }}
                <button type="submit" class="btn btn-primary margin-top-10">Send</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}