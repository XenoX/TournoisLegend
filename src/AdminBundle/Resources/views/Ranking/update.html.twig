{% extends 'AdminBundle::base.html.twig' %}

{% block body %}
    <div class="col-sm-6 col-sm-offset-3">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">
                    {% if ranking.name %}
                        Update {{ ranking.name }}
                    {% else %}
                        Create ranking
                    {% endif %}
                </h3>
            </div>
            <div class="box-body">
                {{ form_start(form) }}
                {{ form_row(form.nameFr) }}
                {{ form_row(form.nameEn) }}
                {{ form_row(form.startAt) }}
                {{ form_row(form.stopAt) }}
                {{ form_row(form.baseElo) }}
                {{ form_row(form.seasonNumber) }}
                {{ form_row(form.mode) }}
                {{ form_rest(form) }}
                <button type="submit" class="btn btn-primary margin-top-10">Send</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}