{% extends 'AdminBundle::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">
                    News
                    <a href="{{ path('admin_news_create') }}" class="btn btn-xs btn-success">
                        <i class="fas fa-plus"></i> Create
                    </a>
                </h3>
            </div>
            <div class="box-body">
                {% if news %}
                    <table class="table table-condensed">
                        <thead>
                        <tr>
                            <th>Title</th>
                            <th>Content</th>
                            <th>Author</th>
                            <th>Action(s)</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for n in news %}
                            <tr class="{{ n.activated == false ? 'bg-danger' }}">
                                <td>{{ n.titleEn }}</td>
                                <td>{{ n.contentEn|slice(0, 50) }}</td>
                                <td>
                                    <a href="{{ path('admin_user_update', {'user': n.user.id}) }}">{{ n.user.name }}</a>
                                </td>
                                <td>
                                    <a href="{{ path('admin_news_update', {'news': n.id}) }}" class="btn btn-xs btn-primary">
                                        <i class="far fa-edit"></i> Edit
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <p class="text-primary text-center">No news yet.</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}