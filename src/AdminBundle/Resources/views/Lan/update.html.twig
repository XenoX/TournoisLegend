{% extends 'AdminBundle::base.html.twig' %}

{% block body %}
    <div class="box box-primary">
        <div class="box-header with-border">
            {% if lan.name %}
                <h3 class="box-title">Modification de la LAN {{ lan.name }}</h3>
            {% else %}
                <h3 class="box-title">Ajouter une LAN</h3>
            {% endif %}
        </div>
        <div class="box-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="container-fluid">
                    <div class="page-header"><h3>Informations</h3></div>
                    <div class="row">
                        <div class="col-lg-4">
                            {{ form_row(form.name) }}
                        </div>
                        <div class="col-lg-4">
                            {{ form_row(form.slug) }}
                        </div>
                        <div class="col-lg-4">
                            {{ form_row(form.game) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            {{ form_row(form.size) }}
                        </div>
                        <div class="col-lg-4">
                            {{ form_row(form.format) }}
                        </div>
                        <div class="col-lg-4">
                            {{ form_row(form.price) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            {{ form_row(form.description) }}
                        </div>
                        <div class="col-lg-4">
                            {{ form_row(form.reward) }}
                        </div>
                        <div class="col-lg-4">
                            {{ form_row(form.mail) }}
                        </div>
                    </div>

                    <div class="page-header"><h3>Dates</h3></div>
                    <div class="row">
                        <div class="col-lg-4">
                            {{ form_row(form.registrationStartAt) }}
                        </div>
                        <div class="col-lg-4">
                            {{ form_row(form.registrationStopAt) }}
                        </div>
                        <div class="col-lg-4">
                            {{ form_row(form.startAt) }}
                        </div>
                    </div>

                    <div class="page-header"><h3>Streams</h3></div>
                    <div class="row">
                        <div class="col-lg-6">
                            {{ form_row(form.twitch) }}
                        </div>
                        <div class="col-lg-6">
                            {{ form_row(form.dailymotion) }}
                        </div>
                    </div>

                    <div class="page-header"><h3>Autre</h3></div>
                    <div class="container-fluid">
                        {{ form_row(form.activated) }}
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.rules) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.plan) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.bracket) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.bracketAmateur) }}
                        </div>
                    </div>

                    {{ form_rest(form) }}
                    <button type="submit" class="btn btn-success btn-sm pull-right">Send</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block css %}
    <style>
        fieldset legend { font-weight: bold; }
    </style>
    <link rel="stylesheet" type="text/css" href="{{ asset('static/plugins/datetimepicker/bootstrap-datetimepicker.min.css') }}">
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('static/plugins/datetimepicker/bootstrap-datetimepicker.min.js') }}"></script>
    <script>
        var datetimepickerRstart = $('#lan_registrationStartAt');
        var datetimepickerRstop = $('#lan_registrationStopAt');
        var datetimepickerStart = $('#lan_startAt');

        datetimepickerRstart.datetimepicker({
            format: "dd-mm-yyyy hh:ii",
            todayBtn: true,
            minuteStep: 15,
            autoclose: true
        });
        datetimepickerRstop.datetimepicker({
            format: "dd-mm-yyyy hh:ii",
            todayBtn: true,
            minuteStep: 15,
            autoclose: true
        });
        datetimepickerStart.datetimepicker({
            format: "dd-mm-yyyy hh:ii",
            todayBtn: true,
            minuteStep: 15,
            autoclose: true
        });
    </script>
{% endblock %}