{% extends 'AdminBundle::base.html.twig' %}

{% block css %}
    <style>
        #logoUpload:hover {
            cursor: pointer;
            opacity: 0.7;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="col-sm-6 col-sm-offset-3">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">
                    {% if rankingLevel.name %}
                        Update {{ rankingLevel.name }}
                    {% else %}
                        Create ranking level
                    {% endif %}
                </h3>
            </div>
            <div class="box-body">
                {{ form_start(form) }}
                <div class="row margin-bottom-10">
                    <div class="col-md-4 col-md-offset-4">
                        <label for="logo_file">
                            <img id="logoUpload" src="{{ asset(rankingLevel.getWebPath()) }}" class="img-responsive">
                            {{ form_widget(form.file) }}
                        </label>
                    </div>
                </div>
                {{ form_row(form.nameFr) }}
                {{ form_row(form.nameEn) }}
                {{ form_row(form.eloMax) }}
                <div class="container-fluid">
                    {{ form_row(form.activated) }}
                </div>
                {{ form_rest(form) }}
                <button type="submit" class="btn btn-primary margin-top-10">Send</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}