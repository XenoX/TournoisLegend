{% extends 'AdminBundle::base.html.twig' %}

{% block body %}
    <div class="col-md-6 col-md-offset-3">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">
                    {% if tag.name %}
                        Update {{ tag.name }}
                    {% else %}
                        Create tag
                    {% endif %}
                </h3>
            </div>
            <div class="box-body">
                {{ form_start(form) }}
                {{ form_row(form.nameFr) }}
                {{ form_row(form.nameEn) }}
                {{ form_row(form.game) }}
                {{ form_rest(form) }}
                <button type="submit" class="btn btn-primary margin-top-10">Send</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}