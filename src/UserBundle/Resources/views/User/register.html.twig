{% extends '::base.html.twig' %}

{% block title %}{{ 'title.register'|trans }} {{ parent() }}{% endblock %}

{% block body %}
<div id="wrapper">
    <section class="hero hero-panel" style="background-image: url({{ asset('static/img/cover-register.jpg') }});">
        <div class="hero-bg"></div>
        <div class="container relative">
            <div class="row">
                <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12 pull-none margin-auto">
                    <div class="panel panel-default panel-login">
                        <div class="panel-heading">
                            <h3 class="panel-title"><i class="fas fa-users"></i> {{ 'form.register.title'|trans }}</h3>
                        </div>
                        <div class="panel-body">
                            {{ form_start(form) }}
                                <div class="form-group input-icon-left {{ form.username.vars.errors|length > 0 ? 'has-error' }}">
                                    <i class="fas fa-user"></i>
                                    {{ form_widget(form.username) }}
                                    {{ form_errors(form.username) }}
                                </div>
                                <div class="form-group input-icon-left {{ form.email.vars.errors|length > 0  ? 'has-error' }}">
                                    <i class="fas fa-envelope"></i>
                                    {{ form_widget(form.email) }}
                                    {{ form_errors(form.email) }}
                                </div>
                                <div class="form-group input-icon-left {{ form.password.first.vars.errors|length > 0  ? 'has-error' }}">
                                    <i class="fas fa-lock"></i>
                                    {{ form_widget(form.password.first) }}
                                    {{ form_errors(form.password.first) }}
                                </div>
                                <div class="form-group input-icon-left {{ form.password.first.vars.errors|length > 0  ? 'has-error' }}">
                                    <i class="fas fa-check"></i>
                                    {{ form_widget(form.password.second) }}
                                </div>

                                <div class="separator"></div>

                                <div class="form-group">
                                    {{ form_widget(form.country) }}
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.gender) }}
                                </div>

                                <div class="controls form-group">
                                    <div class="row">
                                        <div class="container-fluid">
                                            {{ form_widget(form.captcha) }}
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary btn-block">{{ 'form.register.button'|trans }}</button>
                            {{ form_end(form) }}
                        </div>
                        <div class="panel-footer">
                            {{ 'form.register.already_account'|trans }} <a href="{{ path('user_user_login') }}">{{ 'form.register.sign_in'|trans }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}